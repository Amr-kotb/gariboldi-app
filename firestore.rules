rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funzioni helper
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Regole per la collezione users
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin() || isUser(userId);
      allow delete: if isAdmin();
    }
    
    // Regole per la collezione tasks
    match /tasks/{taskId} {
      allow read: if isSignedIn();
      
      allow create: if isSignedIn() && (
        isAdmin() ||
        (request.resource.data.assignedTo == request.auth.uid)
      );
      
      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.assignedTo == request.auth.uid ||
        resource.data.createdBy == request.auth.uid
      );
      
      allow delete: if isAdmin();
    }
    
    // Regole per la collezione logs (opzionale)
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Regole per altre collezioni
    match /{document=**} {
      allow read, write: if false;
    }
  }
}